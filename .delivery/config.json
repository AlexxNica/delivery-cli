{
    "version": "2",
    "build_cookbook": {
        "name": "delivery_rust",
        "path": "cookbooks/delivery_rust"
    },
    "skip_phases": [
      "lint",
      "quality",
      "security",
      "smoke",
      "provision",
      "deploy",
      "functional"
    ],
    "build_nodes": {
        "default"    : ["name:builder*.shd.chef.co"],
        "unit"       : [{"query": "name:builder*.shd.chef.co AND platform_family:debian",
                         "description": "Debian Build"},
                        {"query": "name:builder*.shd.chef.co AND platform_family:rhel",
                         "description": "Rhel Build"}],
        "syntax"     : [{"query": "name:builder*.shd.chef.co AND platform_family:debian",
                         "description": "Debian Build"},
                        {"query": "name:builder*.shd.chef.co AND platform_family:rhel",
                         "description": "Rhel Build"}],
        "publish"    : [{"query": "name:builder*.shd.chef.co AND platform_family:debian",
                         "description": "Debian Build"},
                        {"query": "name:builder*.shd.chef.co AND platform_family:rhel",
                         "description": "Rhel Build"}]
    }
}
